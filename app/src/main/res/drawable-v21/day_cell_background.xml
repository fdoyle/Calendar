<?xml version="1.0" encoding="utf-8"?>


<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">


    <item android:state_checked="true">
        <ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/colorPrimaryDark" android:radius="17.5dp">
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/colorPrimary" />
                </shape>
            </item>
        </ripple>
    </item>

    <item android:state_pressed="true">
        <ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/colorPrimaryDark" android:radius="17.5dp">
        </ripple>
    </item>

    <item app:state_today="true">
        <ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/transparentColorPrimaryDark">
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/transparentColorPrimary" />
                </shape>
            </item>
        </ripple>
    </item>

    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</selector>
